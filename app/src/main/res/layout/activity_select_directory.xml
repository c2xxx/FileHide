<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="当前目录：" />

    <TextView
        android:id="@+id/tv_select_directory_current"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_select_directory_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="输入要搜索的字母"
        android:lines="1"
        android:maxLength="20" />

    <Button
        android:id="@+id/btn_select_directory_pre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上一级目录" />

    <Button
        android:id="@+id/btn_select_directory_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="添加当前目录" />

    <ListView
        android:id="@+id/lv_select_directory_dirs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>